function FindMakeText:boolean;
begin
    if intToBox(476, 404, 496, 424).colorExists(9277980) then
    result:= true;
end;

procedure CombineItems(Item1Btm,Item2Btm:integer);
begin
  clickbitmap(Item1Btm,25,RuniqueBackPack);
  waitfunc(@ItemActivate,300,6000);
  if  not ItemActivate then
  begin
    writeln('Item not click due to lagg/dc');
    TerminateScript;
  end;
  clickbitmap(Item2Btm,25,RuniqueBackPack);
  waitfunc(@FindMakeText,300,6000);
  if FindMakeText then begin
   mouse(point(264, 454),MOUSE_RIGHT, MOUSE_ACCURATE);
   RSPSChooseOption('Make All');
   end else
   begin
     writeln('Could not combine items');
     terminatescript;
   end;
 end;
