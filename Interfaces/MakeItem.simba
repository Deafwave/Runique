function FindMakeText:boolean;
begin
    if intToBox(476, 404, 496, 424).colorExists(9277980) then
    result:= true;
end;

procedure MakeItems(ItemNumber = 1,MaxItems:integer);
begin
  if FindMakeText then begin
   mouse(point(264, 454),MOUSE_RIGHT, MOUSE_ACCURATE);
   RSPSChooseOption('Make All');
   end else
   begin
     writeln('Could not combine items');
     terminatescript;
   end;
 end;
