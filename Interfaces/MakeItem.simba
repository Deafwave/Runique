Function MakeMenuOpen:boolean;
var
Tpa: TPointArray;
begin
 if FindColorsTolerance(Tpa, 9409835, Runiquechatbox, 6, colorSetting(2, 0.09, 2.15)) then
 result:= true;
end;

procedure MakeItems(ItemType:integer);
begin
  WaitFunc(@MakeMenuOpen,300,3000);
  if MakeMenuOpen then
  begin
    case  ItemType of
    1:begin
      mouse(point(264, 454),MOUSE_RIGHT, MOUSE_ACCURATE);
      end;
    //end else
    //begin
    //  writeln('Could not combine items');
    //  terminatescript;
    end;
    RSPSChooseOption('Make All');
  end;
end;
